// models/Product.ts
import { Schema, model } from 'mongoose';

const productSchema = new Schema({
  name: { type: String, unique: true },
  price: { type: Number },
  // /** rest of fields here **/
});

export const Product = model('Product', productSchema);

// models/Donation.ts
import { Schema, model } from 'mongoose';

const donationSchema = new Schema({
  amount: { type: Number, unique: true },
  donor: { type: String },
  // /** rest of fields here **/
});

export const Donation = model('Donation', donationSchema);

// models/VolunteerApplication.ts
import { Schema, model } from 'mongoose';

const volunteerApplicationSchema = new Schema({
  applicantName: { type: String, unique: true },
  applicationDate: { type: Date },
  // /** rest of fields here **/
});

export const VolunteerApplication = model('VolunteerApplication', volunteerApplicationSchema);
